{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Current File",
      "type": "cppbuild",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++20",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/g++"
    }
  ]
}
